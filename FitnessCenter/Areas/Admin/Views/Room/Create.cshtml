@model DataAccess.Model.Room
@{
    ViewBag.Title = "Nová místnost";
}

<h2>Nová místnost</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Add", "Room", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Název")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.MaxCapacity, "Maximální kapacita")
        @Html.TextBoxFor(x => x.MaxCapacity, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MaxCapacity)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Popis")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control description-area" })
    </div>

    <button type="submit" class="btn btn-primary">Vytvoř místnost</button>
}


