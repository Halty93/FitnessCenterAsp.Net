@model DataAccess.Model.FitnessUser
@{
    ViewBag.Title = "Úprava profilu";
}

<h2>Úprava profilu</h2>
@Html.ValidationSummary()

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Address)
    @Html.HiddenFor(x => x.SmallImageName)
    @Html.HiddenFor(x => x.BigImageName)
    @Html.HiddenFor(x => x.Login)
    @Html.HiddenFor(x => x.Password)

    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Jméno")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Surname, "Příjmení")
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Birthdate, "Datum narození")
        @Html.TextBoxFor(x => x.Birthdate, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.BirthNumber, "Rodné číslo (bez lomítka)")
        @Html.TextBoxFor(x => x.BirthNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BirthNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EmailAddress, "EmailAddress")
        @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EmailAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PhoneNumber, "Telefon")
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PhoneNumber)
    </div>
    <div class="form-group">
        <input type="file" class="btn btn-default" name ="picture"/>
        @if (Model.SmallImageName != null)
        {
            <img src="@Url.Content("~/Uploads/FitnessUser/" + Model.SmallImageName)"/>
            @Html.ActionLink("Smazat obrázek", "DeletePicture", "User", new { id = Model.Id, view = "FitnessUser" }, new { @class = "btn btn-danger" })
        }
    </div>

    <button type="submit" class="btn btn-primary">Upravit profil</button>
}

