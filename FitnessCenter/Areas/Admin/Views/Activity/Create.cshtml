@model DataAccess.Model.Activity
@using Microsoft.AspNet
@{
    ViewBag.Title = "Nová aktivita";
    
}
<h2>Nová aktivita</h2>

@using (Html.BeginForm("Add", "Activity", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x=>x.Name,"Název")@*<label for="exampleInputEmail1">EmailAddress address</label>*@
        @Html.TextBoxFor(x=>x.Name,new{@class = "form-control" })@*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Difficultness, "Obtížnost")
        @Html.TextBoxFor(x => x.Difficultness, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Difficultness)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Price, "Cena")
        @Html.TextBoxFor(x => x.Price, new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.Price)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Popis")
        @Html.TextAreaFor(x => x.Description, new {@class = "form-control description-area" })
    </div>
    <div class="form-group">
        <input type="file" class="btn btn-default" name="picture"/>
    </div>
   
    <button type="submit" class="btn btn-primary">Vytvoř aktivitu</button>
}


