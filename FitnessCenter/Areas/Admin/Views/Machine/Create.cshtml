@model DataAccess.Model.Machine
@{
    ViewBag.Title = "Nový stroj";
}

<h2>Nový stroj</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Add", "Machine", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.TextBoxFor(x => x.Status, new { @Value = "V pořádku", @type = "hidden" })
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Název")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class='form-group'>
        <label for="LastCheck" class="control-label">Poslední kontrola</label>
        <div class='input-group date col-md-5' id='LastCheck'>
            <input type='text' id="LastCheck" name="LastCheck" class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>

    <div class='form-group'>
        <label for="LastCheck" class="control-label">Následující kontrola</label>
        <div class='input-group date col-md-5' id='NextCheck'>
            <input type='text' id="NextCheck" name="NextCheck" class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Popis")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control description-area" })
    </div>
    <div class="form-group">
        <input type="file" class="btn btn-default" name ="picture"/>
    </div>
    <button type="submit" class="btn btn-primary">Přidat stroj</button>
}
<a href="#" onclick="history.go(-1)" class="btn btn-default">
    Zpět
</a>
<script type="text/javascript">
    $(function () {
        $('#LastCheck').datetimepicker({
            format: 'DD.MM.YYYY'
        });
        $('#NextCheck').datetimepicker({
            format: 'DD.MM.YYYY'
        });
    });
</script>