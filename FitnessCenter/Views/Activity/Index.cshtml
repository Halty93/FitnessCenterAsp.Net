@using DataAccess.Model
@using System.Globalization;
@model IList<Activity>
@{
    ViewBag.Title = "Druhy Aktivit";
}

<h1>Druhy Aktivit</h1>

@foreach (Activity act in Model)
{
    <div class="col-sm-12">
        <div class="col-sm-7 text-center" style="padding: 5px 0">
            @if (act.SmallImageName != null)
            {
                <img src="@Url.Content("~/Uploads/Activity/" + act.SmallImageName + ".jpg")" alt="Fotografie aktivity @act.Name" />
            }
            else
            {
                <img src="~/Uploads/NoPicture.png" alt="Fotografie není k dispozici" />
            }
        </div>

        <div class="col-sm-5">
            <table class="table-responsive table-condensed">
                <thead>
                    <tr>
                        <th>
                            @act.Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Náročnost</td>
                        <td>@act.Difficultness</td>
                    </tr>
                    <tr>
                        <td>Cena</td>
                        <td>@act.Price.ToString("C", new CultureInfo("cs-CZ"))</td>
                    </tr>
                    <tr>
                        <td>Popis</td>
                        <td>@Html.Raw(act.Description)</td>
                    </tr>
                    <tr>
                        <td>Založil</td>
                        <td>Autor kurzu</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
<div class ="clearfix"></div>

@section Sidebar
{
    <div class="col-sm-3">
        <div class="sidebar-module sidebar-module-inset">
            @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <div class="form-group form-group-sm">
                    <label for="inputUserName" class="col-sm-4 control-label">Login</label>
                    <div class="col-xs-8">
                        <input type="text" class="form-control input-sm" id="inputUserName" placeholder="User Name" name="Login">
                    </div>
                </div>
                <div class="form-group form-group-sm ">
                    <label for="inputPassword" class="col-sm-4 control-label">Heslo</label>
                    <div class="col-xs-8">
                        <input type="password" class="form-control input-sm" id="inputPassword" placeholder="Password" name="Password">
                    </div>
                </div>
                <button class="btn btn-block btn-primary" type="submit">Přihlásit se</button>
            }
        </div>
    </div><!-- /.blog-sidebar -->
}
